@model MyEvernote.WebApp.ViewModels.OkViewModel

@{
    ViewBag.Title = Model.Title;
}

<div class="container">
    <div class="row">
        <div class="main">
            <h3>@Model.Header</h3>  <br /> <br />

            <form role="form">
                <div class="form-group">
                    <div class="main-content">
                        <div class="text-danger">

                            <h2><span class="glyphicon glyphicon-ok-circle"></span> &nbsp;&nbsp;&nbsp;@Model.Title</h2><hr />

                            <p class="text-justify">

                                @foreach (string msg in Model.Items)
                                {

                                    @msg<br>

                                }

                            </p>
                        </div>
                    </div>
                </div>
            </form>

        </div>

    </div>
</div>

@{ 

    string js = string.Empty;

    if(Model.IsRedirecting)
    {

        js = " setTimeout(function () { window.location = '"+Model.RedirectUrl+"'; }, "+Model.RedirectingTimeout+") });";

    }

}



<script>

    $(function () {


        $("footer").parent().hide();

        @Html.Raw(js);

    });

</script>


